@model Aluguel <!-- Tela com formulário para cadastro de um novo filme recebendo parametros nos campos e passando para a ação "Create" do asp--><h4>Titulo do Filme</h4><div class="row">       <div class="col-md-4">        <form asp-action="Create"> <!--Esta linha aciona o metodo create passando os dados preenchidos nos formulários,                                       passando cada atributo conforme descrito no "asp-for"-->            <div class="form-group">                <label asp-for="devolucaoDias" class="control-label"></label>                <input asp-for="devolucaoDias" class="form-control" />                <span asp-validation-for="devolucaoDias" class="text-danger"></span>            </div>            <div class="form-group">                <label asp-for="filmeId" class="control-label"></label>                <select asp-for="filmeId" class="form-control" asp-items="@ViewBag.listaDeFilmes">                    <option value="">-- Selecione um filme --</option>                </select>                <span asp-validation-for="filmeId" class="text-danger"></span>            </div>            <div class="form-group">                <input type="submit" value="Criar!" class="btn btn-success"/> <!--Aplica os dados ao objeto -->                <a asp-action="Index" class="btn btn-info">Voltar!</a> <!-- Efetua a ação conforme descrita, seja "Index" ou                                                                           outro módulo que seja passado-->            </div>        </form>    </div></div>