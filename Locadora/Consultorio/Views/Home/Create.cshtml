@model Filme <!-- Tela com formulário para cadastro de um novo filme recebendo parametros nos campos e passando para a ação "Create" do asp--><h4>Titulo do Filme</h4><div class="row">        <div class="col-md-4">        <form asp-action="Create">            <!--Esta linha aciona o metodo create passando os dados preenchidos nos formulários,        passando cada atributo conforme descrito no "asp-for"-->            <div class="form-group">                <label asp-for="Titulo" class="control-label"></label>                <input asp-for="Titulo" type="text" class="form-control" />                <span asp-validation-for="Titulo" class="text-danger"></span>            </div>            <div class="form-group">                <label asp-for="Sinopse" class="control-label"></label>                <input asp-for="Sinopse" type="text" class="form-control" />            </div>            <div class="form-group">                <label asp-for="Preco" class="control-label"></label>                <input asp-for="Preco" type="text" class="form-control" />                <span asp-validation-for="Preco" class="text-danger"></span>            </div>            <div class="form-group">                <label asp-for="DataLancamento" class="control-label"></label>                <input asp-for="DataLancamento" type="date" class="form-control" />                <span asp-validation-for="DataLancamento" class="text-danger"></span>            </div>            <div class="form-group">                <label asp-for="Duracao" class="control-label"></label> <!-- Duração deve ser passada em minutos-->                <input asp-for="Duracao" type="text" class="form-control" placeholder="Duração em minutos" />                <span asp-validation-for="Duracao" class="text-danger"></span>            </div>            <div class="form-group">                <label asp-for="Url" class="control-label"></label>                <input asp-for="Url" type="text" class="form-control" placeholder="Link do filme" />                <span asp-validation-for="Url" class="text-danger"></span>            </div>            <div class="form-group">                <input type="submit" value="Criar!" class="btn btn-success" /> <!--Aplica os dados ao objeto -->                <a asp-action="Index" class="btn btn-info">Voltar!</a>                <!-- Efetua a ação conforme descrita, seja "Index" ou            outro módulo que seja passado-->            </div>        </form>    </div></div>